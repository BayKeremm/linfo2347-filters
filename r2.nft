#!/usr/sbin/nft -f

flush ruleset

# Define table at r1
table ip filter_for_r2 {
    # Define chains
    chain forwarding {
        type filter hook forward priority 0; policy drop;

        icmp type echo-request ip saddr {10.1.0.2, 10.1.0.3, 10.2.0.2} accept
        icmp type echo-request counter drop

        ct state {new, established, related } accept
    }
}
